pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh '''
                    echo 'Without Docker'
                    touch docker-no.txt
                    ls -la
                '''
            }
        }
        stage('w/ docker') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo 'With Docker'
                    touch docker-yes.txt
                    ls -la
                '''
            }
        }
    }
}
